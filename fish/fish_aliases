alias config='/usr/bin/git --git-dir=/home/chan/.cfg/ --work-tree=/home/chan'

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# dwm update
alias dwm_update='sudo rm -f config.h dwm && sudo make'

# apt-get aliases
alias update='sudo apt-get update && sudo apt-get upgrade'

# Logout the gnome session
alias gsq='gnome-session-quit && exit'

# Open jdk documentation
alias jdkdoc='firefox ~/jdk-15/docs/index.html' 

# git aliases
alias gs='git status'
alias gshow='git show --name-only HEAD~4..HEAD'

# template aliases
alias report_makefile='cp ~/workspace/template/report_makefile ./Makefile'
